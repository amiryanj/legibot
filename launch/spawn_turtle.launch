<launch>
  <arg name="model_turtle" default="$(env TURTLEBOT3_MODEL)" doc="model_turtle type [burger, waffle, waffle_pi]"/>
  <arg name="x_pos" default="-2.0"/>
  <arg name="y_pos" default="-0.5"/>
  <arg name="z_pos" default="0.12"/>

<!--   <include file="$(find gazebo_ros)/launch/empty_world.launch"> -->
<!--     <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_world.world"/> -->
<!--     <arg name="paused" value="false"/> -->
<!--     <arg name="use_sim_time" value="true"/> -->
<!--     <arg name="gui" value="true"/> -->
<!--     <arg name="headless" value="false"/> -->
<!--     <arg name="debug" value="false"/> -->
<!--   </include> -->


  <param name="robot_description_turtle" command="$(find xacro)/xacro --inorder $(find legibot)/urdf/turtlebot.urdf.xacro" />

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf_turtle"  args="-urdf -model turtlebot3_$(arg model_turtle)
    -param robot_description_turtle -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -Y 3.14"
    />
</launch>
